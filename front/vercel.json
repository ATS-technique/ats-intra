{
  "builds": [
    {
      "src": "/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "/dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/((?!assets|.*\\.js|.*\\.css|.*\\.png|.*\\.ico|.*\\.svg|.*\\.webp|.*\\.txt).*)",
      "destination": "/dist/index.html"
    }
  ]
}
